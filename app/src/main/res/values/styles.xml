<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dullGray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--       <item name="loginButtonStyle">@style/ButtonStyle</item>
               <item name="greyBackGroundStyle">@style/GreyBackGroundStyle</item>-->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    </style>

    <style name="customTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabIndicatorColor">@color/yellow</item>
        <item name="tabIndicatorHeight">0dp</item>
        <!--Tab Text Selection-->
        <item name="tabTextAppearance">@style/customTabText</item>
        <item name="tabSelectedTextColor">@color/yellow</item>
    </style>

    <style name="customTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tabTextSize</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="tabTextSyle">
        <item name="android:textColor">@color/blackColor</item>
    </style>

</resources>
