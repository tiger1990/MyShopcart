<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/blackColor"
              android:orientation="vertical">

    <include
        layout="@layout/base_toolbar"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/loginRegisterTablayout"
        style="@style/customTabStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tabMargin"
        android:background="@null"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:tabBackground="@drawable/tab_background_selector_tablayout"
        app:tabGravity="fill"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/loginregisterViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>